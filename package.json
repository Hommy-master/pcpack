{
  "name": "test",
  "version": "1.0.0",
  "description": "A minimal Electron test application",
  "main": "main.js",
  "author": "Developer",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build-win": "electron-packager . --platform=win32 --arch=x64 --out=dist --overwrite --icon=assets/icon/logo.ico",
    "build-mac": "electron-packager . --platform=darwin --arch=x64 --out=dist --overwrite --icon=assets/icon/logo.icns",
    "build-installer": "electron-builder --win nsis --x64 --config electron-builder.config.js --publish never"
  },
  "devDependencies": {
    "electron": "31.7.6",
    "@electron/packager": "^18.3.5",
    "electron-builder": "^24.13.3",
    "electron-installer-windows": "^3.0.0",
    "electron-winstaller": "^5.3.1"
  }
}